<%- include('header') -%>

<div class="jumbotron">
	<div class="container">
		<div class="input-group" align = "center">
		    <h4>Please fill up this form to apply</h4>

		    <form data-toggle="validator" action='/shopper' method='POST' id='shopperform' role="form">
		    	<div class="form-group">
		    		<label for="firstname">First Name</label>
		    		<input class="form-control" type="text" name="firstname" id="firstname" placeholder="First Name" required>
		    	</div>
		    	<div class="form-group">
		    		<label for="lastname">Last Name</label>
		    		<input class="form-control" type="text" name="lastname" id="lastname" placeholder="Last Name" required>
		    	</div>
		    	<div class="form-group">
		    		<label for="email">Email Address</label>
					<input class="form-control" type="email" name="email" id="email" placeholder="Email" data-error="Please enter a valid email address" required>
				</div>
				<div class="form-group">
					<label for="phone">Phone Number</label>
					<input class="form-control" type="text" name="phone" id="phone" placeholder="Phone Number" data-minlength="10" data-maxlength="10" required>
				</div>
				<div class="form-group">
					<label for="zipcode">Zip Code</label>
					<input class="form-control" type="text" name="zipcode" id="zipcode" placeholder="Zip Code" data-minlength="5" data-maxlength="10" required>
				</div>

				<br><br>
				<div class="form-group">
					<input class="btn btn-success" type="submit" value="Submit">
				</div>
			</form>
		</div>
	</div>
</div>
